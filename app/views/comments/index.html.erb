<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', user_comment_path(current_user, comment) %></td>
        <td><%= link_to 'Edit', edit_user_comment_path(current_user, comment) %></td>
        <td><%= link_to 'Destroy', user_comment_path(current_user, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_user_comment_path(current_user) %>
